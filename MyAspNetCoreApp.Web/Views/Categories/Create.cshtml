@model MyAspNetCoreApp.Web.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Kategori Ekle</h1>

<h4>Kategori</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Kategori Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-2" />
                <a class="btn btn-warning mt-2" asp-action="Index">Geri Dön</a>

            </div>
        </form>
    </div>
</div>

