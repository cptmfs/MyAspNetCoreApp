@{
    ViewData["Title"] = "Index";
}

@model List<ProductViewModel>



<h1>Ürünler</h1>
@if (TempData["status"] != null)
{
    <div class="alert alert-success" role="alert">
       @TempData["status"]
    </div>

}

<a class="btn btn-outline-primary" asp-controller="products" asp-action="add">Ürün Ekle</a>
<table id="table1" class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Color</th>
            <th width="150px">Yayınlansın mı?</th>
            <th></th>
            <th>İndirim Oranı</th>
            <th>Yayınlanma Tarihi</th>
            <th>Ürün Açıklaması</th>
            <th width="75px"></th>
            <th width="150px">İşlem</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Color</td>
                <td style="text-align:center">
                    @(item.IsPublish ? "Evet" : "Hayır")

                </td>
                <td></td>
                <td>@item.Discount</td>
                <td>@item.PublishDate</td>
                <td>
                    @if (item.Description.Length>20)
                    {
                        @item.Description.Substring(0,20)<text>...</text>
                    }
                    else
                    {
                        @item.Description
                    }
                </td>
                <td></td>
                <td>
                    <a class="btn btn-outline-danger" asp-asp-controller="products" asp-action="remove" asp-route-id="@item.Id">Sil</a>
                               
                    <a class="btn btn-outline-success" asp-asp-controller="products" asp-action="update" asp-route-id="@item.Id">Güncelle</a>
                </td>

            </tr>
        }
    </tbody>

</table>

