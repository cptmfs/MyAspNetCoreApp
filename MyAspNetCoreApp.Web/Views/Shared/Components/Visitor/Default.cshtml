    <div class="w3-card-4 w3-dark-grey mb-3" style="width:30%">
        <div class="w3-container w3-center">
            <h3>@item.Name</h3>
            <img src="~/images/8.png" alt="Avatar" style="width:70px">
            <h5>@item.Created.ToShortDateString()</h5>
            <p>@item.Comment</p>
            <a class="w3-button w3-green" asp-controller="home" asp-action="update" asp-route-id="@item.Id">Güncelle</a>
            <a class="w3-button w3-red" asp-controller="home" asp-action="remove" asp-route-id="@item.Id">Sil</a>
        </div>

    </div>
}
<hr />
@if (TempData["result"] != null)
{
    <div class="alert alert-success">@TempData["result"]</div>
}

<form asp-controller="Home" asp-action="SaveVisitorComment" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">İsim</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-floating mb-3">
        <label asp-for="Comment" class="form-label">Yorum Yap</label>
        <textarea asp-for="Comment" class="form-control" placeholder="Yorum Yap" style="height:100px"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>