@model VisitorViewModel
<h2>Ziyaretçi Yorumları</h2>
@foreach (var item in ViewBag.visitorViewModels as List<VisitorViewModel>)
{
    <div class="card mt-3" style="width:%100;">
        <div class="card-body">
            <h5 class="card-title">@item.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@item.Created.ToShortDateString()</h6>
            <p class="card-text">@item.Comment</p>
            <a class="btn btn-outline-danger" asp-asp-controller="home" asp-action="remove" asp-route-id="@item.Id">Sil</a>
        </div>
    </div>
}
<hr />
@if (TempData["result"] != null)
{
    <div class="alert alert-success">@TempData["result"]</div>
}

<form asp-controller="Home" asp-action="SaveVisitorComment" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">İsim</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="form-floating mb-3">
        <label asp-for="Comment" class="form-label">Yorum Yap</label>
        <textarea asp-for="Comment" class="form-control" placeholder="Yorum Yap" style="height:100px"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>